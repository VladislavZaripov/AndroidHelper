<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity_4"
        android:background="#76E0ED"
        android:orientation="vertical">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
        <Button
                android:text="@string/Act4_button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Act4_button1"
                android:layout_weight="1"
                tools:ignore="ButtonStyle"/>
        <Button
                android:text="@string/Act4_button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Act4_button2"
                android:layout_weight="1"
                tools:ignore="ButtonStyle"/>
        <Button
                android:text="@string/Act4_button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Act4_button3"
                android:layout_weight="1"
                tools:ignore="ButtonStyle"/>
        <Button
                android:text="@string/Act4_button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Act4_button4"
                android:layout_weight="1"
                tools:ignore="ButtonStyle"/>
        <Button
                android:text="@string/Act4_button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Act4_button5"
                android:layout_weight="1"
                tools:ignore="ButtonStyle"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:id="@+id/Act4_imageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/baseline_android_black_48"
                android:layout_gravity="center|center_vertical"
                android:contentDescription="@string/todo"/>
    </LinearLayout>
</LinearLayout>